<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.socialsite.persistence">
	<class name="FriendRequest">

		<!-- id  -->
		<id name="id">
			<generator class="identity" />
		</id>

		<!-- property -->
		<property name="message" type="text" />
		<!-- Relations -->
		
		
		
		<many-to-one name="friend" column="friend_id" class="com.socialsite.persistence.User" foreign-key="fk_FriendRequest_friend_id_User_id" not-null="true" />
		<many-to-one name="user"  column="user_id" class="com.socialsite.persistence.User" foreign-key="fk_FriendRequest_user_id_User_id" not-null="true" />
		
	</class>
</hibernate-mapping>